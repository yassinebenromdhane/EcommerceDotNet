@page
@model WebAppTest.Pages.StaffModel
@{
    ViewData["Title"] = "Gestion Staff";
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Manager/Child</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var st in Model.Staffs)
        {
            <tr>
                <td>@st.FirstName</td>
                <td>@st.LastName</td>
                <td>@st.Email</td>
                <td>@st.Phone</td>
                <td>@if (st.Manager != null)
                    {
                        @st.Manager.FirstName
                    }
                    else
                    {
                        <ul>
                            @foreach(var child in st.InverseManager)
                            {
                                <li>
                                    @child.FirstName
                                </li>
                            }
                        </ul>
                        
                    }
                </td>
            </tr>
        }
    </tbody>
</table>